@page "/PageTypography"

<div class="mx-auto max-w-5xl px-6 py-10 space-y-12">

    <!-- PAGE HEADER -->
    <header class="space-y-3">
        <h1 class="@Tailwind.Theme.Typography.DISPLAY_SMALL text-slate-900">
            Typography
        </h1>
        <p class="@Tailwind.Theme.Typography.BODY_MEDIUM text-slate-600">
            Material-style typography scale implemented with Tailwind CSS and design tokens.
        </p>

        <pre class="rounded-xl border border-slate-200 bg-slate-50 p-3 text-xs">
<code>&lt;h1 class="@Tailwind.Theme.Typography.DISPLAY_SMALL text-slate-900"&gt;
    Typography
&lt;/h1&gt;</code>
        </pre>
    </header>

    <!-- DISPLAY -->
    <section class="space-y-6">
        <div>
            <h2 class="@Tailwind.Theme.Typography.HEADLINE_LARGE text-slate-900">Display</h2>
            <p class="@Tailwind.Theme.Typography.BODY_SMALL text-slate-600">
                Big, expressive type for hero areas.
            </p>
        </div>

        <div class="space-y-8">

            <!-- DISPLAY LARGE -->
            <div>
                <div class="@Tailwind.Theme.Typography.DISPLAY_LARGE text-slate-900">
                    Display Large
                </div>
                <pre class="mt-2 rounded-xl border border-slate-200 bg-slate-50 p-3 text-xs">
<code>&lt;div class="@Tailwind.Theme.Typography.DISPLAY_LARGE text-slate-900"&gt;
    Display Large
&lt;/div&gt;</code>
                </pre>
            </div>

            <!-- DISPLAY MEDIUM -->
            <div>
                <div class="@Tailwind.Theme.Typography.DISPLAY_MEDIUM text-slate-900">
                    Display Medium
                </div>
                <pre class="mt-2 rounded-xl border border-slate-200 bg-slate-50 p-3 text-xs">
<code>&lt;div class="@Tailwind.Theme.Typography.DISPLAY_MEDIUM text-slate-900"&gt;
    Display Medium
&lt;/div&gt;</code>
                </pre>
            </div>

            <!-- DISPLAY SMALL -->
            <div>
                <div class="@Tailwind.Theme.Typography.DISPLAY_SMALL text-slate-900">
                    Display Small
                </div>
                <pre class="mt-2 rounded-xl border border-slate-200 bg-slate-50 p-3 text-xs">
<code>&lt;div class="@Tailwind.Theme.Typography.DISPLAY_SMALL text-slate-900"&gt;
    Display Small
&lt;/div&gt;</code>
                </pre>
            </div>

        </div>
    </section>

    <!-- HEADLINE -->
    <section class="space-y-6">
        <div>
            <h2 class="@Tailwind.Theme.Typography.HEADLINE_LARGE text-slate-900">Headline</h2>
            <p class="@Tailwind.Theme.Typography.BODY_SMALL text-slate-600">
                Page and section headings.
            </p>
        </div>

        <div class="space-y-6">

            <div>
                <div class="@Tailwind.Theme.Typography.HEADLINE_LARGE text-slate-900">
                    Headline Large
                </div>
                <pre class="mt-2 rounded-xl border border-slate-200 bg-slate-50 p-3 text-xs">
<code>&lt;h2 class="@Tailwind.Theme.Typography.HEADLINE_LARGE text-slate-900"&gt;
    Headline Large
&lt;/h2&gt;</code>
                </pre>
            </div>

            <div>
                <div class="@Tailwind.Theme.Typography.HEADLINE_MEDIUM text-slate-900">
                    Headline Medium
                </div>
                <pre class="mt-2 rounded-xl border border-slate-200 bg-slate-50 p-3 text-xs">
<code>&lt;h3 class="@Tailwind.Theme.Typography.HEADLINE_MEDIUM text-slate-900"&gt;
    Headline Medium
&lt;/h3&gt;</code>
                </pre>
            </div>

            <div>
                <div class="@Tailwind.Theme.Typography.HEADLINE_SMALL text-slate-900">
                    Headline Small
                </div>
                <pre class="mt-2 rounded-xl border border-slate-200 bg-slate-50 p-3 text-xs">
<code>&lt;h4 class="@Tailwind.Theme.Typography.HEADLINE_SMALL text-slate-900"&gt;
    Headline Small
&lt;/h4&gt;</code>
                </pre>
            </div>

        </div>
    </section>

    <!-- TITLE -->
    <section class="space-y-6">
        <div>
            <h2 class="@Tailwind.Theme.Typography.HEADLINE_LARGE text-slate-900">Title</h2>
            <p class="@Tailwind.Theme.Typography.BODY_SMALL text-slate-600">
                Cards, dialogs, lists.
            </p>
        </div>

        <div class="space-y-6">

            @foreach (var (name, css) in new[]
                        {
                        ("TITLE_LARGE", Tailwind.Theme.Typography.TITLE_LARGE),
                        ("TITLE_MEDIUM", Tailwind.Theme.Typography.TITLE_MEDIUM),
                        ("TITLE_SMALL", Tailwind.Theme.Typography.TITLE_SMALL)
                        })
            {
                <div>
                    <div class="@css text-slate-900">@name.Replace("_", " ")</div>
                    <pre class="mt-2 rounded-xl border border-slate-200 bg-slate-50 p-3 text-xs">
                    <code>&lt;div class="@css text-slate-900"&gt;
            @name
        &lt;/div&gt;</code>
                            </pre>
                </div>
            }

        </div>
    </section>

    <!-- BODY -->
    <section class="space-y-6">
        <div>
            <h2 class="@Tailwind.Theme.Typography.HEADLINE_LARGE text-slate-900">Body</h2>
            <p class="@Tailwind.Theme.Typography.BODY_SMALL text-slate-600">
                @LOREM_IPSUM
            </p>
        </div>

        <div class="space-y-6 max-w-3xl">

            @foreach (var (name, css) in new[]
                        {
                        ("BODY_LARGE", Tailwind.Theme.Typography.BODY_LARGE),
                        ("BODY_MEDIUM", Tailwind.Theme.Typography.BODY_MEDIUM),
                        ("BODY_SMALL", Tailwind.Theme.Typography.BODY_SMALL)
                        })
            {
                <div>
                    <p class="@css text-slate-700">
                        @name — @LOREM_IPSUM
                    </p>
                    <pre class="mt-2 rounded-xl border border-slate-200 bg-slate-50 p-3 text-xs">
                    <code>&lt;p class="@css text-slate-700"&gt;
            Body text
        &lt;/p&gt;</code>
                            </pre>
                </div>
            }

        </div>
    </section>

    <!-- LABEL -->
    <section class="space-y-6">
        <div>
            <h2 class="@Tailwind.Theme.Typography.HEADLINE_LARGE text-slate-900">Label</h2>
            <p class="@Tailwind.Theme.Typography.BODY_SMALL text-slate-600">
                Buttons, chips, UI labels.
            </p>
        </div>

        <div class="flex flex-wrap gap-6">

            @foreach (var (name, css) in new[]
                        {
                        ("LABEL_LARGE", Tailwind.Theme.Typography.LABEL_LARGE),
                        ("LABEL_MEDIUM", Tailwind.Theme.Typography.LABEL_MEDIUM),
                        ("LABEL_SMALL", Tailwind.Theme.Typography.LABEL_SMALL)
                        })
            {
                <div>
                    <span class="rounded-md border px-3 py-2 @css">
                        @name
                    </span>
                    <pre class="mt-2 rounded-xl border border-slate-200 bg-slate-50 p-3 text-xs">
                    <code>&lt;span class="@css"&gt;
            @name
        &lt;/span&gt;</code>
                            </pre>
                </div>
            }

        </div>
    </section>

</div>

