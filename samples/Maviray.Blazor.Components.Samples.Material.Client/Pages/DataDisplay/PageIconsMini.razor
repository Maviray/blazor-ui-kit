@page "/PageIconsMini"

<PageTitle>Icons Mini</PageTitle>

<div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold mb-6">Icons Mini</h1>

    <div class="grid gap-4" style="grid-template-columns: repeat(auto-fit, minmax(210px, 1fr));">
        @foreach (var icon in Enum.GetValues<MaviIconMiniType>())
        {
            <div class="flex flex-col justify-center items-center p-4 border rounded-lg hover:shadow-lg transition-shadow bg-white min-h-[140px]">
                <MaviIconMini MaviIconMiniType="@icon" IconColor="IconColor.DimGrey" IconSize="IconSize.Medium"></MaviIconMini>
                <span class="mt-2 text-sm text-center text-gray-700 w-full px-1">@icon</span>
            </div>
        }
    </div>
</div>